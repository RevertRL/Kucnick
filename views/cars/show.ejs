<%- include('../partials/header') %>

<body class="bg-gray-100">
    <div class="container mx-auto py-10">
        <h1 class="text-3xl font-bold mb-8">Appointments Calendar</h1>
        <table class="w-full bg-white border border-gray-200">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-4 py-2 text-left">Date</th>
                    <th class="px-4 py-2 text-left">Time</th>
                    <th class="px-4 py-2 text-left">Description</th>
                    <th class="px-4 py-2 text-left">Status</th>
                </tr>
            </thead>
            <tbody>
                <% appointments.forEach(appointment => { %>
                    <tr>
                        <td class="px-4 py-2"><%= appointment.appointmentDate.toLocaleDateString() %></td>
                        <td class="px-4 py-2"><%= appointment.appointmentTime %></td>
                        <td class="px-4 py-2"><%= appointment.serviceType %></td>
                        <td class="px-4 py-2 <%= appointment.status === 'Completed' ? 'text-green-500' : 'text-red-500' %>">
                            <%= appointment.status %>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
</body>

<%- include('../partials/footer') %>
