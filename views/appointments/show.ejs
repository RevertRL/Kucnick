        <h1>Appointment Details</h1>
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Description</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><%= appointment.appointmentDate ? appointment.appointmentDate.toLocaleDateString() : '' %></td>
